{
    "name": "45 Min Timer",
    "description": "45 min on, 15 min off",
    "version": "1.0",
    "manifest_version": 3,
    "background": {"service_worker": "main.js"},
    "permissions": ["activeTab", "scripting", "alarms"],
    "action": {
        "default_popup": "index.html",
        "default_icon": "45min-timer-logo.png"
      },
      "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+F",
            "mac": "MacCtrl+Shift+F"
          },
          "description": "Opens index.html"
        }
      }

  }